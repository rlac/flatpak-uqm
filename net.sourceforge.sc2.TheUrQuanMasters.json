{
    "app-id": "net.sourceforge.sc2.TheUrQuanMasters",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "20.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "uqm",
    "finish-args": [
        "--share=network",
        "--socket=x11",
        "--device=dri",
        "--share=ipc",
        "--socket=pulseaudio",
        "--device=all",
        "--persist=.uqm"
    ],
    "modules": [
        {
            "name": "desktop-resources",
            "sources": [
                {
                    "type": "file",
                    "path": "net.sourceforge.sc2.TheUrQuanMasters.128x128.png"
                },
                {
                    "type": "file",
                    "path": "net.sourceforge.sc2.TheUrQuanMasters.desktop"
                },
                {
                    "type": "file",
                    "path": "net.sourceforge.sc2.TheUrQuanMasters.appdata.xml"
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share/icons/hicolor/128x128/apps",
                "cp net.sourceforge.sc2.TheUrQuanMasters.128x128.png /app/share/icons/hicolor/128x128/apps/net.sourceforge.sc2.TheUrQuanMasters.png",
                "mkdir -p /app/share/applications",
                "cp net.sourceforge.sc2.TheUrQuanMasters.desktop /app/share/applications",
                "mkdir -p /app/share/appdata",
                "cp net.sourceforge.sc2.TheUrQuanMasters.appdata.xml /app/share/appdata"
            ]
        },
        {
            "name": "uqm",
            "sources": [
                    {
                        "type": "archive",
                        "url": "http://prdownloads.sourceforge.net/sc2/uqm-0.8.0-src.tgz?download",
                        "sha256": "24f2f7db9cf7faf53b95f9e2580e6f596205a98ed0c335cfe834c64785ad4f5a",
                        "dest-filename": "uqm-0.8.0-src.tgz"
                    },
                    {
                        "type": "file",
                        "url": "http://prdownloads.sourceforge.net/sc2/uqm-0.8.0-content.uqm?download",
                        "sha256": "77d75ac25e6fb755a33c4ba3b38a7b7bc41fcbc02896891b0cc9ac9214b72eef",
                        "dest-filename": "uqm-0.8.0-content.uqm"
                    },
                    {
                        "type": "file",
                        "url": "http://prdownloads.sourceforge.net/sc2/uqm-0.8.0-voice.uqm?download",
                        "sha256": "9edbf51d77d8b533399c5f3afb549314a8210d7aab71ca2c51b4f24832337a45",
                        "dest-filename": "uqm-0.8.0-voice.uqm"
                    },
                    {
                        "type": "file",
                        "url": "http://prdownloads.sourceforge.net/sc2/uqm-0.8.0-3domusic.uqm?download",
                        "sha256": "44cd3cec7e9569b4117adb4d77f1522890972566267391ae09631485d231d8b9",
                        "dest-filename": "uqm-0.8.0-3domusic.uqm"
                    }
            ],
            "build-options": {
                "env": {
                    "INPUT_install_prefix_VALUE": "/app",
                    "INPUT_install_bindir_VALUE": "/app/bin",
                    "INPUT_install_libdir_VALUE": "/app/lib",
                    "INPUT_install_sharedir_VALUE": "/app/share"
                }
            },
            "buildsystem": "simple",
            "build-commands": [
                "./build.sh uqm",
                "./build.sh uqm install",
                "mkdir -p /app/share/uqm/content/packages",
                "install uqm-0.8.0-content.uqm /app/share/uqm/content/packages",
                "mkdir -p /app/share/uqm/content/addons",
                "install uqm-0.8.0-3domusic.uqm /app/share/uqm/content/addons",
                "install uqm-0.8.0-voice.uqm /app/share/uqm/content/addons"
            ]
        }
    ]
}