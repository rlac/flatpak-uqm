{
    "app-id": "net.sourceforge.sc2.TheUrQuanMasters",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "uqm",
    "finish-args": [
        "--share=network",
        "--socket=x11",
        "--device=dri",
        "--share=ipc",
        "--socket=pulseaudio",
        "--device=all",
        "--persist=.uqm"
    ],
    "build-options": {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g"
    },
    "cleanup": [
    ],
    "modules": [
        {
            "name": "glu",
            "config-opts": ["--disable-static"],
            "sources": [
                {
                    "type": "archive",
                    "url": "ftp://ftp.freedesktop.org/pub/mesa/glu/glu-9.0.0.tar.gz",
                    "sha256": "4387476a1933f36fec1531178ea204057bbeb04cc2d8396c9ea32720a1f7e264"
                }
            ],
            "cleanup": [
                "/include", "/lib/*.a", "/lib/*.la", "/lib/pkgconfig"
            ]
        },
        {
            "name": "libmikmod",
            "config-opts": ["--disable-static"],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://sourceforge.net/projects/mikmod/files/libmikmod/3.3.11.1/libmikmod-3.3.11.1.tar.gz",
                    "sha256": "ad9d64dfc8f83684876419ea7cd4ff4a41d8bcd8c23ef37ecb3a200a16b46d19"
                }
            ],
            "cleanup": [
                "/bin", "/share/man", "/share/info", "/share/aclocal", "/include", "/lib/*.la", "/lib/*.a", "/lib/pkgconfig"
            ]
        },
        {
            "name": "sdl",
            "config-opts": ["--disable-static"],
            "rm-configure": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.libsdl.org/release/SDL-1.2.15.tar.gz",
                    "sha256": "d6d316a793e5e348155f0dd93b979798933fb98aa1edebcc108829d6474aad00"
                },
                {
                    "type": "patch",
                    "path": "sdl-xdata32.patch"
                },
                {
                    "type": "script",
                    "dest-filename": "autogen.sh",
                    "commands": [
                        "sed -i -e 's/.*AM_PATH_ESD.*//' configure.in",
                        "cp -p /usr/share/automake-*/config.{sub,guess} build-scripts",
                        "aclocal",
                        "libtoolize",
                        "autoconf"
                    ]
                }
            ],
            "cleanup": [
                "/bin", "/share/man", "/share/aclocal", "/include", "/lib/pkgconfig", "/lib/*.la", "/lib/*.a"
            ]
        },
        {
            "name": "SDL_image",
            "config-opts": ["--disable-static"],
            "rm-configure": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.libsdl.org/projects/SDL_image/release/SDL_image-1.2.12.tar.gz",
                    "sha256": "0b90722984561004de84847744d566809dbb9daf732a9e503b91a1b5a84e5699"
                },
                {
                    "type": "script",
                    "dest-filename": "autogen.sh",
                    "commands": [
                        "AUTOMAKE=\"automake --foreign\" autoreconf -vfi"
                    ]
                }
            ]
        },
        {
            "name": "desktop-resources",
            "sources": [
                {
                    "type": "file",
                    "path": "net.sourceforge.sc2.TheUrQuanMasters.128x128.png"
                },
                {
                    "type": "file",
                    "path": "net.sourceforge.sc2.TheUrQuanMasters.desktop"
                },
                {
                    "type": "file",
                    "path": "net.sourceforge.sc2.TheUrQuanMasters.appdata.xml"
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share/icons/hicolor/128x128/apps",
                "cp net.sourceforge.sc2.TheUrQuanMasters.128x128.png /app/share/icons/hicolor/128x128/apps/net.sourceforge.sc2.TheUrQuanMasters.png",
                "mkdir -p /app/share/applications",
                "cp net.sourceforge.sc2.TheUrQuanMasters.desktop /app/share/applications",
                "mkdir -p /app/share/appdata",
                "cp net.sourceforge.sc2.TheUrQuanMasters.appdata.xml /app/share/appdata"
            ]
        },
        {
            "name": "uqm",
            "sources": [
                    {
                        "type": "archive",
                        "url": "http://prdownloads.sourceforge.net/sc2/uqm-0.7.0-1-source.tgz?download",
                        "sha256": "136015af296b03e45a47cd19e6c4815de118c26e56548dc75d182f8d8bd028e7",
                        "dest-filename": "uqm-0.7.0-1-source.tgz"
                    },
                    {
                        "type": "file",
                        "url": "http://prdownloads.sourceforge.net/sc2/uqm-0.7.0-content.uqm?download",
                        "sha256": "b8f6db8ba29f0628fb1d5c233830896b19f441aee3744bda671ea264b44da3bf",
                        "dest-filename": "uqm-0.7.0-content.uqm"
                    },
                    {
                        "type": "file",
                        "url": "http://prdownloads.sourceforge.net/sc2/uqm-0.7.0-voice.uqm?download",
                        "sha256": "bcccf801b4ba37594ff6217b292744ea586ee2d447e927804842ccae8b73c979",
                        "dest-filename": "uqm-0.7.0-voice.uqm"
                    },
                    {
                        "type": "file",
                        "url": "http://prdownloads.sourceforge.net/sc2/uqm-0.7.0-3domusic.uqm?download",
                        "sha256": "c57085e64dad4bddf8a679a9aa2adf63f2156d5f6cbabe63af80519033dbcb82",
                        "dest-filename": "uqm-0.7.0-3domusic.uqm"
                    },
                    {
                        "type": "file",
                        "url": "http://prdownloads.sourceforge.net/sc2/uqm-remix-disc1.uqm?download",
                        "sha256": "b697694745d939311e8ebffdd5edf692e010c25d7966e1481074940a4d0487e8",
                        "dest-filename": "uqm-remix-disc1.uqm"
                    },
                    {
                        "type": "file",
                        "url": "http://prdownloads.sourceforge.net/sc2/uqm-remix-disc2.uqm?download",
                        "sha256": "7fbb4744102e31273e4459b01a156da052ec537c128fe91793643e348bc1bade",
                        "dest-filename": "uqm-remix-disc2.uqm"
                    },
                    {
                        "type": "file",
                        "url": "http://prdownloads.sourceforge.net/sc2/uqm-remix-disc3.uqm?download",
                        "sha256": "e6d89f8f66cf1df1cb278fca1e92261b1776ee670dff26132e33f14dbd31e91d",
                        "dest-filename": "uqm-remix-disc3.uqm"
                    },
                    {
                        "type": "file",
                        "url": "http://prdownloads.sourceforge.net/sc2/uqm-remix-disc4.uqm?download",
                        "sha256": "a4c8197712a5b72a81c7ef7a2a33ea7d3ac90ab063c929dd68e7328a559a86d0",
                        "dest-filename": "uqm-remix-disc4.uqm"
                    }
            ],
            "build-options": {
                "env": {
                    "INPUT_install_prefix_VALUE": "/app",
                    "INPUT_install_bindir_VALUE": "/app/bin",
                    "INPUT_install_libdir_VALUE": "/app/lib",
                    "INPUT_install_sharedir_VALUE": "/app/share"
                }
            },
            "buildsystem": "simple",
            "build-commands": [
                "./build.sh uqm",
                "./build.sh uqm install",
                "mkdir -p /app/share/uqm/content/packages",
                "cp uqm-0.7.0-content.uqm /app/share/uqm/content/packages",
                "mkdir -p /app/share/uqm/content/addons",
                "cp uqm-0.7.0-3domusic.uqm /app/share/uqm/content/addons",
                "cp uqm-0.7.0-voice.uqm /app/share/uqm/content/addons",
                "cp uqm-remix*.uqm /app/share/uqm/content/addons"
            ]
        }
    ]
}